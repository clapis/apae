@{
    Layout = "_Layout";
}

@*Page Wrapper*@
<div id="wrapper">

    @*Sidebar*@
    <partial name="_Sidebar" />
    @*End of Sidebar*@

    @*Content Wrapper*@
    <div id="content-wrapper" class="d-flex flex-column">

        @*Main Content*@
        <div id="content">

            @*Topbar*@
            <partial name="_Topbar" />
            @*End of Topbar*@

            @*Begin Page Content*@
            <div class="container-fluid">
                @RenderBody()
            </div>
            @*End Page Content*@

        </div>
        @*End of Main Content*@

        @*Footer*@
        <footer class="sticky-footer bg-white">
            <div class="container my-auto">
                <div class="copyright text-center my-auto">
                    <span>Copyright &copy; <a target="_blank" href="https://www.tangrammuseologia.com/">Tangram</a> 2020</span>
                </div>
            </div>
        </footer>
        @*End of Footer*@

    </div>
    @*End of Content Wrapper*@

</div>
@*End of Page Wrapper*@

@*Scroll to Top Button*@
<a class="scroll-to-top rounded" href="#wrapper">
    <i class="fas fa-angle-up"></i>
</a>

@section Scripts
{
    @RenderSection("Scripts", required: false)
}